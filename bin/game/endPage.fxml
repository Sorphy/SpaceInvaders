<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Game over">
         <font>
            <Font size="55.0" />
         </font>
      </Label>
      <HBox prefHeight="0.0" prefWidth="264.0">
         <children>
            <Label text="Score: ">
               <font>
                  <Font size="21.0" />
               </font>
               <padding>
                  <Insets right="5.0" />
               </padding>
            </Label>
            <Label fx:id="scoreLabel" text="Unknown">
               <font>
                  <Font size="21.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Your name:">
               <font>
                  <Font size="21.0" />
               </font>
               <padding>
                  <Insets right="5.0" />
               </padding>
            </Label>
            <TextField fx:id="nameInput" prefHeight="26.0" prefWidth="143.0" />
         </children>
      </HBox>
      <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveScore" prefHeight="122.0" prefWidth="263.0" text="Save">
         <font>
            <Font size="56.0" />
         </font>
      </Button>
   </children>
</VBox>
